datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  role     String   // "member" or "admin"
  name     String
  borrows  Borrow[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  books Book[]
}

model Shelf {
  id    Int    @id @default(autoincrement())
  name  String @unique
  books Book[]
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  author      String
  categoryId  Int
  shelfId     Int
  stock       Int      @default(0)
  totalStock  Int      @default(0)
  category    Category @relation(fields: [categoryId], references: [id])
  shelf       Shelf    @relation(fields: [shelfId], references: [id])
  borrows     Borrow[]
}

model Borrow {
  id         Int      @id @default(autoincrement())
  userId     Int
  bookId     Int
  borrowDate DateTime @default(now())
  dueDate    DateTime
  returnDate DateTime?
  status     String   @default("borrowed")  // pending, borrowed, returned
  fine       Int      @default(0)

  user  User @relation(fields: [userId], references: [id])
  book  Book @relation(fields: [bookId], references: [id])
}
